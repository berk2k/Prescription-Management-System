@using se4458_final_web.Models.Dto
@model PrescriptionDto

<h2>Prescription Management</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Tc">TC Kimlik</label>
        <input asp-for="Tc" class="form-control" />
        <span asp-validation-for="Tc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Prescription</button>
    </div>
</form>

<hr />

<h3>Add Medication</h3>

<form asp-action="AddMedication" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="MedicineName">Medicine Name</label>
        <input type="text" id="MedicineName" name="MedicineName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" id="Price" name="Price" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Add Medication</button>
    </div>
</form>

<hr />

<h3>Prescribed Medications</h3>

@if (Model.Medications != null && Model.Medications.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medication in Model.Medications)
            {
                <tr>
                    <td>@medication.MedicineName</td>
                    <td>@medication.Price</td>
                    <td>
                        <a asp-action="UpdateMedication" asp-route-id="@medication.Id">Update</a> |
                        <a asp-action="DeleteMedication" asp-route-id="@medication.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No medications added yet.</p>
}
